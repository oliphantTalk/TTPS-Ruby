<br>
<div class="container col-md-6 col-md-offset-3 ">
  <h1>Listing Results</h1>

  <table class="table text-center">
    <thead class="thead-dark">
      <tr>
        <th>Score</th>
        <th>Student</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr>
          <td><%= result.score %></td>
          <td><%= result.student.surname %> <%= result.student.name %></td>
          <td>
            <%= link_to 'Show', [result.exam.course, result.exam, result], class: 'btn btn-outline-primary'  %>
            <%= link_to 'Edit', edit_course_exam_result_path(result.exam.course, result.exam, result), class: 'btn btn-outline-success'  %>
            <%= link_to 'Destroy', [result.exam.course, result.exam, result],  data: { confirm: 'Are you sure?' }, :method => :delete , class: 'btn btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Result', new_course_exam_result_path(params[:exam_id]), class: 'btn btn-outline-warning' %>
  <%= link_to 'Back to Exams', course_exams_path(@results.first.exam.course) , class: 'btn btn-outline-dark'%>

</div>