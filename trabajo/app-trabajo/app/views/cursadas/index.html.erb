<p id="notice"><%= notice %></p>

<h1>Cursadas</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursadas.each do |cursada| %>
      <tr>
        <td><%= cursada.year %></td>
        <td><%= link_to 'Show', cursada, class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Edit', edit_cursada_path(cursada), class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Destroy', cursada, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cursada', new_cursada_path, class: 'btn btn-outline-warning' %>
